<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd" version="2.0">
    
    <named-query name="UC_READ_BANK_ACCOUNT_BY_REFERENCE_NUMBER" >
        <query>SELECT bankAccount FROM com.ultracommerce.core.payment.domain.secure.BankAccountPayment bankAccount
               WHERE  bankAccount.referenceNumber = :referenceNumber
        </query>
    </named-query>

</entity-mappings>
